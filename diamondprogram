def displaytriangle(num):
        sc = num // 2
        for i in range(1, num + 1, 2):
            print(" " * sc, end="")
            print("*" * i)
            sc = sc - 1
        sc = 1

        for i in range(num - 2, 0, -2):
            print(" " * sc, end="")
            print("*" * i)
            sc = sc + 1


num = int(input("Enter The Number Of Lines"))
displaytriangle(num)
